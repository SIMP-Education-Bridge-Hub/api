generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UserType {
  userTypeId String @id @default(uuid())
  type       String

  users User[]
}

model User {
  userId     String @id @default(uuid())
  userTypeId String
  name       String
  surname    String
  email      String @unique
  password   String
  phone      String @unique

  type UserType @relation(fields: [userTypeId], references: [userTypeId])
}
